{{>/admin/header}}

      <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Nueva Clase</h4>
                  
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="input_name">Nombre</label>
                      <input type="text" class="form-control" id="input_name" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                      <label for="input_description">Descripcion</label>
                      <input type="text" class="form-control" id="input_description" placeholder="Descripcion">
                    </div>
                    <div class="form-group">
                      <label for="input_img">Imagen</label>
                      <input type="text" class="form-control" id="input_img" placeholder="Link Imagen">
                    </div>
                    <div class="form-group">
                      <label for="input_h_begin">Hora Inicio</label>
                      <input type="time" class="form-control" id="input_h_begin">
                    </div>
                    
                     <div class="form-group">
                      <label for="input_h_end">Hora Final</label>
                      <input type="time" class="form-control" id="input_h_end">
                    </div>
                    
                    <button type="submit" class="btn btn-primary mr-2" onclick="createActivity()">Guardar</button>
                  </form>
                </div>
              </div>
            </div>
            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Clases Actuales</h4>
                  
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Nombre
                          </th>
                          <th>
                            Descripcion
                          </th>
                          <th>
                            Imagen
                          </th>
                          <th>
                            Hora inicio
                          </th>
                          <th>
                            Hora Final
                          </th>
                          <th>
                            Acciones
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                      
                      {{#list}}
                        <tr>
                          <td>
                            {{id}}
                          </td>
                          <td>
                            {{name}}
                          </td>
                          <td>
                           {{description}}
                          </td>
                          <td>
                            <img src="{{img}}"/>
                          </td>
                          <td>
                            {{beginning}}
                          </td>
                          <td>
                            {{end}}
                          </td>
                          <td>
                            <span onclick="removeActivity({{id}})">Borrar</span> <a href="/admin/activities/{{id}}/edit">Editar</a>
                          </td>
                        </tr>
                       {{/list}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
       
       
{{>/admin/footer}}