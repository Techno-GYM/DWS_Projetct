{{>/admin/header}}

      <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Nuevo Cliente</h4>
                  
                  <form class="forms-sample">
                    <div class="form-group">
                      <label for="input_name">Nombre</label>
                      <input type="text" class="form-control" id="input_name" placeholder="Nombre">
                    </div>
                    <div class="form-group">
                      <label for="input_email">Email</label>
                      <input type="email" class="form-control" id="input_email" placeholder="Email">
                    </div>
                    <div class="form-group">
                      <label for="input_dir">Direccion</label>
                      <input type="text" class="form-control" id="input_dir" placeholder="Direccion">
                    </div>
                    <div class="form-group">
                      <label for="input_tlf">Telefono</label>
                      <input type="text" class="form-control" id="input_tlf" placeholder="Telefono">
                    </div>
                    
                     <div class="form-group">
                      <label for="input_password">Password</label>
                      <input type="password" class="form-control" id="input_password" placeholder="Password">
                    </div>
                    
                    <button type="submit" class="btn btn-primary mr-2">Guardar</button>
                  </form>
                </div>
              </div>
            </div>
            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Clientes Actuales</h4>
                  
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Nombre
                          </th>
                          <th>
                            Email
                          </th>
                          <th>
                            Direccion
                          </th>
                          <th>
                            Telefono
                          </th>
                         
                          <th>
                            Acciones
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                      
                      {{#list}}
                        <tr>
                          <td>
                            {{id}}
                          </td>
                          <td>
                            {{name}}
                          </td>
                          <td>
                           {{email}}
                          </td>
                          <td>
                           {{address}}
                          </td>
                          <td>
                            {{phone}}
                          </td>
                        
                          <td>
                            Borrar Editar
                          </td>
                        </tr>
                       {{/list}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
       
       
{{>/admin/footer}}